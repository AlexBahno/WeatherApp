<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:strokeWidth="0dp"
    android:background="@color/cultured">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cultured">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/firstDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="21.12"
            android:textSize="@dimen/_10ssp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_background"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/secondDate"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_8sdp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/secondDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="22.12"
            android:textSize="@dimen/_10ssp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_background"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/firstDate"
            app:layout_constraintEnd_toStartOf="@+id/thirdDate"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_8sdp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/thirdDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="21.12"
            android:textSize="@dimen/_10ssp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_background"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/secondDate"
            app:layout_constraintEnd_toStartOf="@id/fourthDate"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_8sdp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fourthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="21.12"
            android:textSize="@dimen/_10ssp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_background"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/thirdDate"
            app:layout_constraintEnd_toStartOf="@id/fifthDate"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_8sdp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fifthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="21.12"
            android:textSize="@dimen/_10ssp"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_background"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fourthDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_8sdp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>